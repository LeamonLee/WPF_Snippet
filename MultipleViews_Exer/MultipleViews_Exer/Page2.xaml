<Page x:Class="MultipleViews_Exer.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MultipleViews_Exer"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Page2" Background="DodgerBlue">

    <Grid>
        <TextBlock Text="Second Page" VerticalAlignment="Top" HorizontalAlignment="Center" />
        <Button x:Name="btnPrev" Content="Prev" VerticalAlignment="Center" HorizontalAlignment="Left" Click="btnPrev_Click"/>
        <Button x:Name="btnNext" Content="Next" VerticalAlignment="Center" HorizontalAlignment="Right" Click="btnNext_Click"/>
    </Grid>
</Page>
